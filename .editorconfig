# EditorConfig - 統一編輯器設置
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python 文件
[*.py]
indent_size = 4

# TypeScript/JavaScript 文件
[*.{js,jsx,ts,tsx}]
indent_size = 4

# JSON 文件
[*.json]
indent_size = 4

# YAML 文件
[*.{yml,yaml}]
indent_size = 4

# Markdown 文件（保留尾隨空格）
[*.md]
trim_trailing_whitespace = false

# Docker 文件
[Dockerfile]
indent_size = 4
